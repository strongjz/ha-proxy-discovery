global
  log /dev/log  local0
  log /dev/log  local1 notice
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults	
	mode  http
  option httplog
  option dontlognull
  timeout connect  5000
  timeout client  50000
  timeout server  1800s
  stats enable
  stats auth admin:admin
  stats uri /haproxyStats

frontend http-in
	bind *:80

	#Define the hosts
<% applications.each do |k,v|  %>
	acl <%= k %> hdr_end(host) -i <%= v['domain']  %>
<% end %>

	#figure out which one to use
<% applications.each do |k,v|  %>
	use_backend <%= k %> if <%= k %>
<% end %>

<% applications.each do |k,v|  %>
backend <%= k %>
	balance roundrobin
	<% v["containers"].each do |c| %>
		server Node1 <%=c%> cookie A check 
	<% end %>
<% end %>
